<h2>Edit File: <%= file.fileName %></h2>

<% if (file.status === "synced") { %>
    <p style="color: orange;"><strong>Note:</strong> This file is currently synced. Your changes will require leader approval before updating all nodes.</p>
<% } %>

<div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-bottom: 20px;">
    <!-- Old Content -->
    <div style="border: 1px solid #ddd; padding: 15px; border-radius: 5px; background: #f9f9f9;">
        <h4>Current Content</h4>
        <p><strong>File Name:</strong> <%= file.fileName %></p>
        <p><strong>File Size:</strong> <%= Math.round(file.fileSize / 1024) %> KB</p>
        <hr>
        <p><strong>Content:</strong></p>
        <pre style="background: #e9ecef; padding: 10px; border-radius: 3px; max-height: 300px; overflow-y: auto;"><%= file.fileContent || '(empty)' %></pre>
    </div>

    <!-- New Content Form -->
    <div style="border: 1px solid #ddd; padding: 15px; border-radius: 5px; background: #fffbf0;">
        <h4>New Content</h4>
        <form action="/files/<%= file._id %>/edit" method="POST" id="editForm">
            <div style="margin-bottom: 15px;">
                <label for="fileName">File Name</label>
                <input type="text" id="fileName" name="fileName" value="<%= file.fileName %>" required style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 3px;">
            </div>

            <div style="margin-bottom: 15px;">
                <label for="fileContent">File Content</label>
                <textarea id="fileContent" name="fileContent" rows="10" style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 3px; font-family: monospace;"><%= file.fileContent || '' %></textarea>
            </div>

            <button type="submit" class="btn-small btn-save">Save Changes</button>
            <a href="/files" class="btn-small" style="background: #6c757d; color: white; padding: 8px 12px; border-radius: 4px; text-decoration: none;">Cancel</a>
        </form>
    </div>
</div>

<% if (file.status === "pending_confirmation" || file.status === "pending_approval") { %>
    <div style="background: #fff3cd; border: 1px solid #ffc107; padding: 15px; border-radius: 5px; margin-top: 20px;">
        <h4>‚è≥ Pending Approval</h4>
        <p>Your changes are waiting for confirmation and leader approval. Once submitted, a notification will be sent to the leader.</p>
    </div>
<% } %>

<style>
    .btn-small {
        padding: 8px 12px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 14px;
        margin-right: 5px;
        font-weight: bold;
        display: inline-block;
    }

    .btn-save {
        background: #28a745;
        color: white;
    }

    .btn-save:hover {
        background: #218838;
    }

    pre {
        font-size: 12px;
        line-height: 1.4;
        color: #333;
    }
</style>
